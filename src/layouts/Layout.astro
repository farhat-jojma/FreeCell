---
import Nav from "../components/Nav.astro";
const { lang = "en", title = "Astro Basics", isHomePage = false } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width", initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- ✅ Google AdSense global script -->
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-XXXXXXX"
      crossorigin="anonymous"
    ></script>

    <!-- Google Search Console verification -->
    <meta name="google-site-verification" content="aShb-9UGoTeILFt_eaaorlm6O9c_z_EhRIefm32jUPg" />
  </head>
  <body class={`bg-gray-50 text-gray-900 ${isHomePage ? 'home-page' : ''}`}>
    <!-- ✅ Navigation -->
    <Nav siteName="FreeCell Online" />

    <!-- ✅ Page content -->
    <main class={isHomePage ? '' : 'min-h-screen'}>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
  
  /* Styles normaux pour toutes les pages */
  html,
  body {
    height: auto;
    overflow: auto;
  }
  
  /* Styles spécifiques pour la page d'accueil */
  body.home-page {
    height: 100vh;
    overflow: hidden;
  }
  
  body.home-page main {
    height: calc(100vh - 56px);
    overflow: hidden;
  }
</style>