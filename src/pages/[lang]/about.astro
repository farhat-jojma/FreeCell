---
import Layout from "../../layouts/Layout.astro";
import { getLangStaticPaths, resolveLang } from "../../lib/i18n";
import HtmlContent from "../../components/HtmlContent.astro";

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../../locales/${locale}.json`).then((m) => m.default);
---

<Layout lang={locale} title={dict.aboutTitle}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-teal-800 to-cyan-800 text-white py-20 overflow-hidden">
    <div class="absolute inset-0 bg-[url('/bg-pattern.svg')] opacity-10"></div>
    <div class="relative max-w-5xl mx-auto px-6 text-center">
      <!-- <img src="/favicon.svg" alt="FreeCell logo" class="w-28 h-28 mx-auto mb-8 drop-shadow-xl" /> -->
      <h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight">
        {dict.aboutTitle}
      </h1>
      <p class="text-lg md:text-xl opacity-90 max-w-3xl mx-auto leading-relaxed">
        {dict.aboutSubtitle || "Discover more about FreeCell and our mission to provide fun, safe, and free online gaming for everyone."}
      </p>
    </div>
  </section>

  <!-- Main Content Section -->
  <section class="relative max-w-6xl mx-auto px-6 py-24">
  <!-- Decorative background -->
  <div class="absolute inset-0 bg-gradient-to-r from-teal-100 via-cyan-50 to-teal-100 opacity-60 rounded-[3rem] blur-3xl"></div>
  
  <!-- Content Wrapper -->
  <div class="relative bg-white/90 backdrop-blur-sm border border-gray-100 rounded-3xl shadow-2xl p-10 md:p-16 hover:shadow-[0_0_40px_rgba(0,0,0,0.1)] transition duration-500">
    <div class="prose prose-lg prose-gray mx-auto leading-relaxed">
      <HtmlContent slug="about" locale={locale} fallbackText="About page not available." />
    </div>
  </div>
</section>


  <!-- Highlight Section -->
  <section class="bg-gradient-to-br from-gray-50 to-gray-100 py-20">
    <div class="max-w-6xl mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-10 text-center">
      
      <!-- Card 1 -->
      <div class="relative group">
        <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-teal-400 to-cyan-500 opacity-70 blur-xl group-hover:opacity-90 transition duration-500"></div>
        <div class="relative bg-white rounded-2xl shadow-lg p-10 hover:-translate-y-2 transition duration-300">
          <span class="block text-5xl font-extrabold text-teal-500 mb-4">01</span>
          <h3 class="text-2xl font-bold text-gray-800 mb-4">
            {dict.aboutCard1Title || "Fun & Engaging"}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {dict.aboutCard1Text || "Enjoy a fun, relaxing, and challenging experience."}
          </p>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="relative group">
        <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-indigo-400 to-purple-500 opacity-70 blur-xl group-hover:opacity-90 transition duration-500"></div>
        <div class="relative bg-white rounded-2xl shadow-lg p-10 hover:-translate-y-2 transition duration-300">
          <span class="block text-5xl font-extrabold text-indigo-500 mb-4">02</span>
          <h3 class="text-2xl font-bold text-gray-800 mb-4">
            {dict.aboutCard2Title || "Safe for Everyone"}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {dict.aboutCard2Text || "Play in a secure and kid-friendly environment."}
          </p>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="relative group">
        <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-pink-400 to-orange-500 opacity-70 blur-xl group-hover:opacity-90 transition duration-500"></div>
        <div class="relative bg-white rounded-2xl shadow-lg p-10 hover:-translate-y-2 transition duration-300">
          <span class="block text-5xl font-extrabold text-pink-500 mb-4">03</span>
          <h3 class="text-2xl font-bold text-gray-800 mb-4">
            {dict.aboutCard3Title || "Always Free"}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {dict.aboutCard3Text || "No downloads, no fees—just click and play!"}
          </p>
        </div>
      </div>

    </div>
  </section>

  <!-- Call to Action -->
  <section class="bg-gradient-to-r from-teal-800 to-cyan-800 py-20 text-center text-white">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-3xl md:text-4xl font-extrabold mb-6">
        {dict.aboutCTA || "Ready to start playing FreeCell?"}
      </h2>
      <p class="text-lg opacity-90 mb-8">
        {dict.aboutCTAText || "Jump into the game now and enjoy endless hours of fun—completely free."}
      </p>
      <a href="/{locale}/play" class="inline-block bg-white text-teal-700 font-semibold px-8 py-4 rounded-xl shadow-md hover:bg-gray-100 transition">
        {dict.aboutCTAButton || "Play FreeCell Now"}
      </a>
    </div>
  </section>
</Layout>
